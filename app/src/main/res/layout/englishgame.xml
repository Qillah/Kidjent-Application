<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/english">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fullscreen_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="28dp"
            android:id="@+id/engreturn"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/Operator"
            android:layout_toStartOf="@+id/Operator">

            <ImageView

                android:id="@+id/playback"
                android:src="@drawable/backb"
                android:padding="10dp"
                android:layout_gravity="center"

                android:layout_width="46dp"
                android:layout_height="56dp" />

            <customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RETURN"
                android:textSize="22dp"
                android:textColor="@android:color/background_dark"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="normal|bold" />


        </LinearLayout>

        <customfonts.MyTextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Life"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_below="@+id/engreturn"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/heartw"
            android:id="@+id/imageView6"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_alignBottom="@+id/Life"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_marginTop="49dp"
            android:id="@+id/ivQPicture"
            android:layout_below="@+id/Life"
            android:layout_centerHorizontal="true" />

        <customfonts.MyTextView
            android:text="TextView"
            android:background="@drawable/rectblue"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:id="@+id/choice2"
            android:layout_alignBaseline="@+id/choice1"
            android:layout_alignBottom="@+id/choice1"
            android:layout_alignLeft="@+id/choice4"
            android:layout_alignStart="@+id/choice4"
            android:textStyle="bold" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Score"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_above="@+id/ivQPicture"
            android:layout_toRightOf="@+id/imageView7"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <customfonts.MyTextView
            android:text="TextView"
            android:background="@drawable/rectblue"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:id="@+id/choice4"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:layout_alignBaseline="@+id/choice3"
            android:layout_alignBottom="@+id/choice3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold" />

        <customfonts.MyTextView
            android:text="TextView"
            android:background="@drawable/rectblue"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="35dp"
            android:id="@+id/choice3"
            android:layout_below="@+id/choice1"
            android:layout_alignLeft="@+id/choice1"
            android:layout_alignStart="@+id/choice1"
            android:textStyle="bold" />

        <customfonts.MyTextView
            android:text="Strawberry"
            android:background="@drawable/rectblue"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="30dp"
            android:id="@+id/choice1"
            android:layout_below="@+id/ivQPicture"
            android:layout_alignLeft="@+id/imageView6"
            android:layout_alignStart="@+id/imageView6"
            android:textStyle="bold" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/scoreb"
            android:id="@+id/imageView7"
            android:layout_width="70dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivQPicture"
            android:layout_toEndOf="@+id/ivQPicture"
            android:textStyle="bold" />
    </RelativeLayout>
</FrameLayout>
